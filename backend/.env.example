# ============================================
# OfflineRAG Environment Configuration
# ============================================
# Copy this file to .env and modify as needed

# Application Settings
APP_NAME=OfflineRAG
DEBUG=false
LOG_LEVEL=INFO

# Server Settings
HOST=127.0.0.1
PORT=8000

# LLM Settings (Ollama)
LLM_PROVIDER=ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TIMEOUT=120

# Generation Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# Embedding Settings
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu

# Vector Store Settings
SIMILARITY_TOP_K=5
SIMILARITY_THRESHOLD=0.3

# Document Processing
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# OCR Settings
OCR_ENABLED=true
OCR_LANGUAGE=eng

# Voice Settings
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
TTS_ENABLED=true

# RAG Settings
RAG_HYBRID_SEARCH=true
RAG_MAX_SOURCES=5
